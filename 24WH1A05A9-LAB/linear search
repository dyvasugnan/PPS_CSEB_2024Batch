#include<stdio.h>
int linearsearch(int[],int,int);
	int main(){
	int arr[]={1,3,5,3,6,4,7,8};
	int n=sizeof(arr)/sizeof(arr[0]);
	int num,index,i;
		printf("enter number to search");
		scanf("%d",&num);
	index=linearsearch(arr,n,num);
	if (index!=1){
	 
	printf("The index of the number present is %d\n",index);
	}else  
	printf("the number is not found");
	
	return 0;
	}

	int linearsearch(int arr[],int n,int num){
	int i,index;
	for(i=0;i<=n;i++){
	if(num==arr[i]){
	
	return i;
	}	
	}
	 return 1;
	
	}
