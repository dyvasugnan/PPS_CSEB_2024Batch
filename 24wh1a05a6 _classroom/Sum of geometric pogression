#include <stdio.h>

int main()

{

int x, n;

printf("Enter the value of x: ");

scanf("%d", &x);

printf("Enter the value of n: ");

scanf("%d", &n);

if (n < 0) {

printf("Error: Please enter a non-negative integer for n.\n");

}

int sum = 0;

int power = 1;

for (int i = 0; i <= n; ++i) {

sum += power;

power *= x;

}

printf("Sum of the geometric progression: %d\n", sum);
}
