#include<stdio.h>
int main () {
int n;
printf("enter the number of elements in an array:") ;
scanf("%d",&n);
int arr[n];
printf("enter %d integers:\n",n);
for(int i=0;i<n;i++){
scanf("%d",&arr[i]);
}
int min=arr[0];
int max=arr[0];
int sum=0;
for(int i=0;i<n;i++){
if(arr[i]<min){
min=arr[i];
}
if(arr[i]>max){
max=arr[i];
}
sum+=arr[i];
}
average=sum/n;
printf("\nMinimum value:%d\n",min);
printf ("maximum value:%d\n",max);
printf("average value:%d.2f\n",average);
return 0;
}
